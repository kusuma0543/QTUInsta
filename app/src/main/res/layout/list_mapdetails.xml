<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    >



    <android.support.v7.widget.CardView android:layout_marginTop="10dp"
        android:id="@+id/cardView"
        android:layout_marginLeft="7dp"
        android:background="@drawable/basic_ripple"

        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"

        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
       app:cardElevation="11dp"
     >

        <FrameLayout
            android:background="@drawable/basic_ripple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"

            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mappage_sername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="Service provider1"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mappage_seradd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito"
                        android:text="Service provider1"
                        android:textColor="#000"
                        android:focusable="false"
                        android:clickable="false"
                        android:textSize="15sp" />
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:scaleX=".5"
                            android:focusable="false"
                            android:clickable="false"
                            android:rating="3.5"
                            android:scaleY=".5"
                            android:transformPivotX="0dp"
                            android:transformPivotY="0dp"
                            android:max="5"
                            android:layout_weight="2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:clickable="false"
                            android:fontFamily="@font/nunito"
                            android:text="          3.0"
                            android:textSize="13sp" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_afterseslect"
                        android:fontFamily="@font/nunito"
                        android:text="Gold"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="@color/colorAccent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/nunito"
                        android:text="Visiting Charges"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="#000"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/visitingcahrge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/nunito"
                        android:text="Rs 100 to Rs 500"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="#000"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/nunito"
                        android:text="Book Now"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="#696565"/>

            </LinearLayout>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|right"
                android:layout_marginLeft="5dp"
android:layout_marginRight="9dp"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/ic_remove_red_eye_black_24dp"
                android:fontFamily="@font/nunito" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>