<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ringaapp.ringauser.Second"
    tools:showIn="@layout/activity_second">
    <RelativeLayout
        android:id="@+id/relative_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <EditText
            android:id="@+id/edsubcat_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/second_search"
            android:drawableLeft="@drawable/black_search"
            android:fontFamily="@font/nunito"
            android:textCursorDrawable="@color/colorBackgound"
            android:hint="Electrician,Plumber,2 Bhk,Mobiles,Cars"
            android:imeOptions="actionDone"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="#FFF"
            android:textColorHint="#f5f3f3" />

        <!--<Button-->
            <!--android:id="@+id/second_searchbut"-->
            <!--android:layout_width="29dp"-->
            <!--android:layout_height="29dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_alignEnd="@+id/edsubcat_search"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@drawable/ic_mic_black_24dp" />-->
    </RelativeLayout>
    <ListView
        android:layout_below="@+id/relative_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second_listview"
        android:divider="@null"
        android:dividerHeight="0dp"
        />
</RelativeLayout>
