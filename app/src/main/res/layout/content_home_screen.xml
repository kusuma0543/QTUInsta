<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.getinstaapp.instaapp.HomeScreen"
    tools:showIn="@layout/activity_home_screen">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">
            <ImageView
                 android:layout_width="290dp"
                 android:layout_height="110dp"
                 android:paddingTop="5dp"
                 android:layout_marginLeft="35dp"
                 android:src="@drawable/logi_ap"/>

    </LinearLayout>
    <Button
        android:id="@+id/butsingin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:textSize="21sp"
        android:padding="10dip"
        android:hint="LOGIN"
        android:textColorHint="@color/colorPrimary"
        android:background="@drawable/rounded_edittext" />
    <Button
        android:id="@+id/butsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="30dp"
        android:textSize="21sp"
        android:padding="10dip"
        android:hint="SIGN UP"
        android:textColorHint="#FFF"
        android:background="@drawable/rounded_editetxtnobg" />
</LinearLayout>

</RelativeLayout>
