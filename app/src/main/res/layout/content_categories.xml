<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.getinstaapp.instaapp.Categories"
    tools:showIn="@layout/app_bar_categories">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">


    <Button
        android:id="@+id/edcat_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
android:layout_marginLeft="9dp"
        android:shadowColor="@color/colorAccent"
android:layout_weight="0.7"
      android:textAlignment="viewStart"
        android:hint="   Search for services"
        android:paddingRight="15dp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:background="@drawable/rounded_edittextred"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/search"/>
            <Button
                android:id="@+id/butforgorpswd_otp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:shadowColor="@color/colorPrimary"
                android:layout_weight="1.3"
                android:textAlignment="viewStart"
                android:hint="   BUY"
                android:textSize="22sp"
android:layout_marginTop="3dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:background="@drawable/rounded_edittextred"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/buy"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:text="Recommended Services"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_add"


        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        >
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
      android:layout_below="@+id/edcat_search"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    </android.support.v4.view.ViewPager>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"

            android:layout_height="40dp"
            />

    </android.support.v7.widget.CardView>
    <GridView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/home_gridview"
   android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:verticalSpacing="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:numColumns="3"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
